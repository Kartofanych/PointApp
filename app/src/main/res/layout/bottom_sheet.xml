<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:elevation="20dp"
    android:focusableInTouchMode="true"
    android:background="@drawable/only_top_corner_white"
    >

    <RelativeLayout
        android:id="@+id/rell"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/iosss"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/men_name"
        android:layout_below="@id/rell"
        android:layout_centerHorizontal="true"
        android:text="Насыбуллин Карим"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/rob_light"
        />
    <RelativeLayout
        android:id="@+id/relll"
        android:layout_below="@+id/men_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            >
        <ImageView
            android:id="@+id/marsh_im"
            android:layout_width="30dp"
            android:layout_centerHorizontal="true"
            android:layout_height="30dp"
            android:src="@drawable/distance_icon"
            />
        <TextView
            android:id="@+id/marsh_txt"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#8A000000"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_below="@+id/marsh_im"
            android:fontFamily="@font/rob_medium"
            android:layout_centerHorizontal="true"
            android:text="12 000 km"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="30dp"
            >
            <ImageView
                android:id="@+id/kol_im"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/completed_task_icon"
                />
            <TextView
                android:id="@+id/kol_txt"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#8A000000"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_below="@+id/kol_im"
                android:fontFamily="@font/rob_medium"
                android:layout_centerHorizontal="true"
                android:text="234"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relll"
        android:layout_marginHorizontal="20dp"
        android:background="@color/grey"
        />
    <RelativeLayout
        android:layout_below="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#8A000000"
            android:text="Готов к работе завтра"
            android:layout_centerVertical="true"
            android:fontFamily="@font/rob_medium"
            android:layout_marginHorizontal="40dp"
            android:textSize="18dp"
            android:layout_marginBottom="30dp"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:thumb="@drawable/switch_oval"

            android:layout_marginHorizontal="40dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>