<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f6f7f3"
    >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_full"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="0"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintHeight_percent="0.8"
        >

        <TextView
            android:id="@+id/tch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".manage"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:fontFamily="@font/asket_extended_bold"
            />
        <TextView
            android:layout_below="@+id/tch"
            android:id="@+id/opis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="сервис для оптимизации маршрутов"
            android:textSize="14dp"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/black"
            android:fontFamily="@font/asket_extended_bold"
            />
        <EditText
            android:layout_marginTop="150dp"
            android:id="@+id/name"
            android:hint="Имя"
            android:maxLines="1"
            android:backgroundTint="@color/grey"
            android:textColor="@color/black"
            android:singleLine="true"
            android:digits="-.() abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZцукенгшщзхъфывапролджэячсмитьбюЙЦУКЕНГШЩЗХЪФЫВАПРОЛДЖЭЯЧСМИТЬБЮ"
            android:lines="1"
            android:textColorHint="@color/grey"
            android:fontFamily="@font/asket_extended_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/surname"
            android:layout_below="@+id/name"
            android:backgroundTint="@color/grey"
            android:textColor="@color/black"
            android:hint="Фамилия"
            android:textColorHint="@color/grey"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:fontFamily="@font/asket_extended_light"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/reg"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            android:layout_marginVertical="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Войти"
            />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>